# Environment Variables - Sports Facility Reservation System
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/sports-reservation-system

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRE=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@sportsreservation.com

# Admin Configuration
ADMIN_EMAIL=admin@sportscomplex.com
ADMIN_PASSWORD=admin123

# Sports Facility Configuration
FACILITY_NAME=Your Sports Complex Name
FACILITY_TIMEZONE=Europe/Warsaw
DEFAULT_RESERVATION_DURATION=60
MAX_ADVANCE_BOOKING_DAYS=30
MIN_ADVANCE_BOOKING_HOURS=2

# Payment Configuration (optional)
PAYMENT_ENABLED=false
CURRENCY=PLN
DEFAULT_HOURLY_RATE=50

# Notification Settings
SEND_CONFIRMATION_EMAILS=true
SEND_REMINDER_EMAILS=true
REMINDER_HOURS_BEFORE=24
